/* pages/my/my.wxss */

#header {
  height: 325rpx;
  text-align: center;
}

#user-portrait {
  height: 170rpx;
  width: 170rpx;
  border-radius: 50%;
  -moz-border-radius: 50%;
  -webkit-border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 16pt;
  text-align: center;
}

#menu {
  height: 190rpx;
  border: 1rpx #c62626 solid;
  background-color: #c62626;
}

.menu-top {
  color: #f4dfdf;
  font-size: 20pt;
  margin-top: 14rpx;
}

.menu-content {
  color: #fff;
  font-size: 18pt;
}

.menu-row {
  text-align: center;
  width: 248rpx;
  border-right: 1rpx #dd6a5e solid;
  display: table-cell;
}

#line {
  height: 20rpx;
  background-color: #f5f5f5;
}

.menu {
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  border-bottom: 1rpx solid #e8e8e8;
  height: 88rpx;
  font-size: 15pt;
  color: #333;
}

.icon {
  height: 64rpx;
  width: 64rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

#feedback {
  border: none;
  background: none;
  border-radius: 0;
  margin: 5rpx 0rpx 5rpx 0rpx;
  padding: 0 0 0 0;
}

.feedback:after {
  border: none;
}

#header_2 {
  position: relative;
  text-align: center;
  height: 325rpx;
}

#background {
  height: 325rpx;
  width: 750rpx;
  position: absolute;
  top: 0px;
  left: 0px;
  z-index: -1;
}

#user_portrait {
  border-radius: 50%;
  -moz-border-radius: 50%;
  -webkit-border-radius: 50%;
  text-align: center;
  height: 170rpx;
  width: 170rpx;
  z-index: 1;
  margin-top: 21rpx;
}
